@using MudBlazor;

@namespace BroadcastManager2

<MudNavMenu>
    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="/logout" Match="NavLinkMatch.Prefix">Logout</MudNavLink>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Login</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
    <MudNavLink Href="@remoteURL" Target="remoteview" Match="NavLinkMatch.Prefix">Member Page</MudNavLink>
    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="/manager" Match="NavLinkMatch.Prefix">Broadcast Manager</MudNavLink>
            <MudNavLink Href="/fullscreen" Match="NavLinkMatch.Prefix">Users</MudNavLink>
            <MudNavGroup Title="Settings" Expanded="true">
                <MudNavLink Href="/users" Match="NavLinkMatch.Prefix">Users</MudNavLink>
                <MudNavLink Href="/security" Match="NavLinkMatch.Prefix">Security</MudNavLink>
                <MudNavLink Href="/reboot" Match="NavLinkMatch.Prefix">Reboot Server</MudNavLink>
            </MudNavGroup>
        </Authorized>
        <NotAuthorized>
        </NotAuthorized>
    </AuthorizeView>

    <MudNavLink Href="/about"  Match="NavLinkMatch.Prefix">About</MudNavLink>
</MudNavMenu>

@code {
    string remoteURL = @"https://" + AppSettings.RemoteServerDnsHostName + "." + AppSettings.DomainName + "/";
}
